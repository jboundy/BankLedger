@model BankLedger.BLL.Models.ActiveAccount

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <label for="accountBalance">Please login</label>
        <div class="well">
            <form id="accountBalanceForm">
                <div class="form-group">
                    <label>Current Balance: $@Model.Balance</label>
                </div>
                <div class="form-group">
                    <label asp-for="Balance">Enter Amount: </label>
                    <input asp-for="Balance" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </form>
            <div class="form-group">
                <button id="deposit" class="btn btn-primary">Deposit</button>
                <button id="withdraw" class="btn btn-primary">Withdraw</button>
                <button id="transactionHistory" class="btn btn-primary">Transaction History</button>
            </div>
        </div>
    </div>
</div>
@foreach (var transaction in Model.TransactionHistory)
{
    <div class="row">
        <div class="col-md-4 col-md-offset-3">
            @transaction.Type
        </div>
        <div class="col-md-4 col-md-offset-3">
            @transaction.AmountChanged
        </div>
        <div class="col-md-4 col-md-offset-3">
            @transaction.ChangedDate
        </div>
    </div>
}

@Html.Hidden("ActiveAccount", Json.Serialize(Model))