@model BankLedger.BLL.Models.ActiveAccount

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <div class="well">
            <form id="accountBalanceForm">
                <div class="form-group">
                    <label id="currentBalance">Current Balance: $@Model.Balance</label>
                </div>
                <div class="form-group">
                    <label asp-for="Balance">Enter Amount: </label>
                    <input asp-for="Balance" class="form-control" />
                    <span asp-validation-for="Balance" class="text-danger"></span>
                </div>
            </form>
            <div class="form-group">
                <button id="deposit" class="btn btn-primary">Deposit</button>
                <button id="withdraw" class="btn btn-primary">Withdraw</button>
                <button id="transactionHistory" class="btn btn-primary" data-target="#transactionHistoryTable">Transaction History</button>
            </div>
        </div>
    </div>
</div>

@await Component.InvokeAsync("TransactionHistoryComponent")
@Html.Hidden("ActiveAccount", Json.Serialize(Model))
